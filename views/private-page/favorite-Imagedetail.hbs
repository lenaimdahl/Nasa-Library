<div class="background-container">
  <h2>{{imageData.data.0.title}}</h2>

  <div>
    {{#if imageData.links.0.href}}
      <img src="{{imageData.links.0.href}}" alt={{imageData.data.0.title}} />
    {{/if}}

    <div>
      <h2><strong>Description</strong></h2>
      <p class="img-description">{{imageData.data.0.description}}</p>
    </div>
    <div>
      <form action="/favorites/{{imageData._id}}" method="post">
        <button type="submit">Remove as Favorite Image</button>
      </form>
    </div>
  </div>
</div>