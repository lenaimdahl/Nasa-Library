<div class="background-img">

  <h2 class="title"> Welcome to your private Library</h2>
  <div class="background-container">
    <div class="gallery-container">
      <br />
<h1 class="profile-title"> Welcome to your profile  !</h1>
  <h2 class="title"> Your Private Library</h2>
  <div class="background-container">
    <div class="gallery-container">
      <br /> 
      <div class="flex-container-column">
        {{#if allImages.0.image}}
          <a href="/private-library/{{allImages.0._id}}">
            <img
              class="private-img"
              src="{{allImages.0.image}}"
              alt={{allImages.0.title}}
            />
          </a>
        {{/if}}
        <h2>{{allImages.0.name}}</h2>
      </div>
      <br />
      <button type="button" class="btn btn-outline-secondary">
        <a href="/private-library">Go to Library
        </a>
      </button>

    </div>
    <button type="button" class="default-btn">
      <a href="/private/create">Add your own image</a>
    </button>
  </div>
  {{#if firstFavorite}}
    <h2 class="title"> Your Favorites</h2>
    <div class="background-container">
      <div class="gallery-container">
        <div class="flex-container-column">
          <a href="/favorites"><img
              class="img-gallery"
              src="{{firstFavorite.0.links.0.href}}"
              alt=""
            /></a>
        </div>
        <br />
        <button type="button" class="btn btn-outline-secondary">
          <a href="/favorites">Go to Library</a>
        </button>

    </div> <br>
    <button type="button" class="edit-btn">
      <a href="/private/create">Create your own image</a>
    </button>
  </div>

  <h2 class="title"> Your Favorites</h2>
  <div class="background-container">
    <div class="gallery-container">

      <div class="flex-container-column">
        {{! do background image in a div}}
        <br>
        <a href="/favorites"><img
            class="img-gallery"
            src="{{favorites.0.links.0.href}}"
            alt=""
          /></a>
      </div>
    </div>
  {{/if}}
</div>