<div class="background-container">
  <div class="flex-container-column">

    <h1 class="h1-signup">Signup</h1>

    <div class="signup">

      <form novalidate="novalidate" action="/signup" method="post">
        <input
          class="input-style"
          type="username"
          name="username"
          value=""
          required="true"
          placeholder="Enter your username"
        />
        <input
          class="input-style"
          type="password"
          name="password"
          value=""
          required="true"
          placeholder="******"
        />

        <input class="edit-btn" type="submit" value="Signup" />
        {{#if errorMessage}}
          <p class="error">{{errorMessage}}</p>
        {{/if}}
      </form>

    </div>

  </div>
</div>