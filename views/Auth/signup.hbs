<h1>Signup</h1>

<div>

  <form action="/signup" method="post">
    <input
      type="username"
      name="username"
      value=""
      required="true"
      placeholder="Enter your username"
    />
    <input
      type="password"
      name="password"
      value=""
      required="true"
      placeholder="******"
    />

