{{! <h1>Hello Spacelover!</h1> }}

<div class="background-container">

  <h2 class="page-title"> Picture Of the day</h2>
  <h3 class="subtitle">Discover the cosmos!
    <br />
    Each day a different image or photograph of our fascinating universe is
    featured, along with a brief explanation written by a professional
    astronomer.</h3>

  <div class="flex-container">
    <div class="center-container">
      <img
        class="img-day"
        src="{{url}}"
        loading="lazy"
        alt="Picture of the day"
      />
    </div>
    <div class="text-container">
      <h2>{{title}}</h2>
      <h3>Date: {{date}}</h3>
      <p class="img-description">{{explanation}}</p>
    </div>
  </div>
</div>

<div class="background-container">
  <h2 class="page-title"> NASA Image Library</h2>
  <a class="library-link" href="/Library">Go to Library</a>
  <div class="grid-container">
    {{#each randomLibrary}}
      {{! do background image in a div}}
      <a href="/library/{{data.0.nasa_id}}"><img
          class="img-gallery"
          src="{{links.0.href}}"
          alt="Picture of the day"
        /></a>
    {{/each}}
  </div>
</div>

<div class="background-container">

  <div id="carouselExampleCaptions" class="carousel slide">
    <div class="carousel-indicators">
      <button
        type="button"
        data-bs-target="#carouselExampleCaptions"
        data-bs-slide-to="0"
        class="active"
        aria-current="true"
        aria-label="Slide 1"
      ></button>
      <button
        type="button"
        data-bs-target="#carouselExampleCaptions"
        data-bs-slide-to="1"
        aria-label="Slide 2"
      ></button>
      <button
        type="button"
        data-bs-target="#carouselExampleCaptions"
        data-bs-slide-to="2"
        aria-label="Slide 3"
      ></button>
      <button
        type="button"
        data-bs-target="#carouselExampleCaptions"
        data-bs-slide-to="3"
        aria-label="Slide 4"
      ></button>
    </div>

    <div class="carousel-inner">

      <div class="carousel-item">
        {{#each sunPhotoData}}
          <a href="/library/{{data.0.nasa_id}}">
            <img src="{{links.0.href}}" class="d-block w-100" alt="..." /></a>
        {{/each}}
        <div class="carousel-caption d-none d-md-block">
          <h5>The Sun Gallery</h5>
          <p>Some representative placeholder content for the second slide.</p>
        </div>
      </div>

      <div class="carousel-item">
        {{#each moonPhotoData}}
          <a href="/library/{{data.0.nasa_id}}">
            <img src="{{links.0.href}}" class="d-block w-100" alt="..." /></a>
        {{/each}}
        <div class="carousel-caption d-none d-md-block">
          <h5>The Moon Gallery</h5>
          <p>Some representative placeholder content for the third slide.</p>
        </div>
      </div>

      <div class="carousel-item">
        {{#each venusPhotoData}}
          <a href="/library/{{data.0.nasa_id}}">
            <img src="{{links.0.href}}" class="d-block w-100" alt="..." /></a>
        {{/each}}
        <div class="carousel-caption d-none d-md-block">
          <h5>The Venus Gallery</h5>
          <p>Some representative placeholder content for the third slide.</p>
        </div>
      </div>

      <div class="carousel-item active">
        {{#each marsPhotoData}}
          <a href="/library/{{data.0.nasa_id}}">
            <img src="{{links.0.href}}" class="d-block w-100" alt="..." /></a>
        {{/each}}
        <div class="carousel-caption d-none d-md-block">
          <h5>Mars Curiosity Images</h5>
          <p>Some representative placeholder content for the first slide.</p>
        </div>
      </div>
    </div>
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#carouselExampleCaptions"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#carouselExampleCaptions"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

</div>