<h1>Hello Spacelover!</h1>

<div class="background-container">
  <h2> Picture Of the day</h2>
  <div class="flex-container">
    <div class="center-container">
      <img class="img-day" src="{{url}}" alt="Picture of the day" />
    </div>
    <div class="text-container">
      <h2>{{title}}</h2>
      <h3>Date: {{date}}</h3>
      <p>{{explanation}}</p>
    </div>
  </div>
</div>

<br />
<br />

<div class="background-container">
  <h2> Nasa Library</h2>
  <a href="/Library">See more</a>

  <div class="grid-container">

    {{#each randomLibrary}}

      <a href="/Library"><img
          class="img-day"
          src="{{links.0.href}}"
          alt="Picture of the day"
        /></a>
    {{/each}}
  </div>
</div>