<div class="background-container">
  <h2>{{imageData.data.0.title}}</h2>

  <div>
    {{#if imageData.links.0.href}}
      <img
        class="img-detail"
        src="{{imageData.links.0.href}}"
        alt={{imageData.data.0.title}}
      />
    {{/if}}

    <div>
      <h3 class="img-description">{{imageData.data.0.description}}</h3>
    </div>
  </div>
</div>