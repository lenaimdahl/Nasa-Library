 <h1 class="title">The Sun</h1>
 <div class="background-container">
  <div class="gallery-container">
 
  <div class="grid-container">
    {{#each sunPhotoData}}
      <div>
        <a href="/library/{{data.0.nasa_id}}"><img
            class="img-gallery"
            src="{{links.0.href}}"
            alt="sun Rover Image"
          /></a>
        <h3>{{data.0.title}}</h3>
       
        {{#if ../isLoggedIn}}
          <form action="/favorites" method="post">
            <button class="favorites-btn" type="submit">Add to favorites</button>
            <input
              type="text"
              name="imageId"
              value="{{data.0.nasa_id}}"
              hidden="true"
            />
          </form>
        {{/if}}
      </div>
    {{/each}}
  </div>
  </div>
</div>